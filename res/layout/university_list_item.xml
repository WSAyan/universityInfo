<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
	
	<ImageView
        android:id="@+id/unilogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/shortname"
        android:layout_margin="5dp"
        android:background="@color/White"
        android:padding="3dp"
        android:paddingLeft="1dp"
       android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher" />

	<TextView
    	android:id="@+id/shortname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/unilogo"
        android:maxLines="1"
        android:text="shortname"
        android:textColor="@color/DarkGreen"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
	    android:id="@+id/longname"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/shortname"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/shortname"
	    android:ellipsize="end"
	    android:maxLines="4"
	    android:scrollHorizontally="true"
	    android:text="largename"
	    android:textColor="@color/DarkSeaGreen"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
